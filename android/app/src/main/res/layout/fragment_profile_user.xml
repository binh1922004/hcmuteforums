    <ImageButton
        android:id="@+id/btnSetting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="Camera"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Khu vực thông tin người dùng -->
    <ImageView
        android:id="@+id/coverPhoto"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coverurl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/coverCameraButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="Camera"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/coverPhoto"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar_boy"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coverPhoto"
        tools:ignore="MissingConstraints"
        />

    <ImageButton
        android:id="@+id/uploadAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-15dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="Camera"
        android:elevation="4dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar" />



    <LinearLayout
        android:id="@+id/FrameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar">

        <!-- Thông tin user -->

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aaliah Maya"
                android:layout_marginStart="4dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maya75"
                android:layout_marginStart="4dp"
                android:textColor="#888888"
                android:textSize="14sp" />
            <!-- Nút Edit -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:background="@drawable/custom_buton_profile"
                android:backgroundTint="#E0E0E0"
                android:text="Chỉnh sửa trang cá nhân" />
        </LinearLayout>
